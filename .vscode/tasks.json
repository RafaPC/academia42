{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
		},
		{
            "type": "shell",
            "label": "compile get_next_line",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
				"${file}",
				"${fileDirname}/get_next_line_utils.c",
                "-o",
				"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
		},
		{
            "type": "shell",
            "label": "compile test 42tester",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
				//"${file}",
				"${fileDirname}/42TESTERS-GNL/srcs/gnl_tester.c",
				"${fileDirname}/get_next_line.c",
				"${fileDirname}/get_next_line_utils.c",
				"-I ../",
                "-o",
				"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
		},
		{
            "type": "shell",
            "label": "compile test 42tester_bonus",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
				//"${file}",
				"${fileDirname}/42TESTERS-GNL/srcs/gnl_tester_bonus.c",
				"${fileDirname}/get_next_line.c",
				"${fileDirname}/get_next_line_utils.c",
				"-I ../",
                "-o",
				"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}