{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
		},
		{
            "type": "shell",
            "label": "compile get_next_line",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
				"${file}",
				"${fileDirname}/get_next_line_utils.c",
                "-o",
				"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}